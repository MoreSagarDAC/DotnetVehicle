@using vehicle;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @{
        List<Vehicle> list=ViewBag.insert;
            <table>
                <tr>
                    <th>id</th><th>name</th><th>company</th><th>price</th><th>engine</th>
                </tr>
           
            @foreach(Vehicle v in list){
                    <tr>
                        <td>@v.id</td><td>@v.name</td><td>@v.company</td><td>@v.price</td><td>@v.engine</td>
                        <td><button type="button" ><a href="/Vehicle/update/@v.id"/>Edit</button></td>
                        <td><a href="/Vehicle/delete/@v.id">DELETE</a> </td>
                        <td><a href="/Vehicle/find/@v.id">view</a> </td>
                    </tr>
            }
             </table>
            
    }
</div>
